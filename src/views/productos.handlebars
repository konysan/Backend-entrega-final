<body>
    <h1>Productos Lista</h1>
    {{#if usuario}}
    <h3 data-carrito="{{usuario.cart}}" id="h3Usuario">Usuario conectado: {{usuario.first_name}} {{usuario.last_name}}</h3>
    {{else}}
    <p>Usuario no disponible</p>
    {{/if}}



    <ul>
        {{#each productos}}
            <li>
                <h2>{{this.title}}</h2>
                <p>Precio: {{this.price}}</p>
                <p>Descripci√≥n: {{this.description}}</p>
                <p>Cantidad: {{this.stock}}</p>
                <button onclick="agregar('{{_id}}')">Agregar a carrito</button>
            </li>
        {{/each}}
    </ul>
    <a href="/carrito">Ver Carrito</a>

    <script src="/js/productos.js"></script>
</body>
